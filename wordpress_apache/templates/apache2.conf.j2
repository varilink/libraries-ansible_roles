{% if wp_reverse_proxy_host is defined %}
<VirtualHost {{ ansible_default_ipv4.address }}:
{{- wp_reverse_proxy_pass_port }}>
{% else %}
<VirtualHost 127.0.0.1:{{ wp_reverse_proxy_pass_port }}>
{% endif %}

  ServerName {{ wp_server_name }}
  ServerAdmin {{ wp_admin_user_email }}
  DocumentRoot /var/www/{{ wp_server_name }}/html
  ErrorLog ${APACHE_LOG_DIR}/{{ wp_server_name }}-error.log
  CustomLog ${APACHE_LOG_DIR}/
  {{- wp_server_name }}-access.log combined

  <Directory "/var/www/{{ wp_server_name }}/html">
    AllowOverride All
  </Directory>

</VirtualHost>
